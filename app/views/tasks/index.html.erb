<h1>My Tasks</h1>
<% @tasks.each do |task| %>
  <h3><%= task.completed == true ? "☑️" : "[ ]"%> <%= link_to task.title.capitalize, task_path(task) %><%= link_to '🗑', task_path(task), method: :delete, data: { confirm: 'Are you sure?' } %>
</h3>
<% end %>
<%= link_to '+ Add a new task', new_task_path %>
